#!/bin/bash
#
# User Discovery - Aggregate Results
# Convenience wrapper for aggregate_results.py
#
# Usage:
#   bin/aggregate
#   bin/aggregate --output summary.json
#

# Color codes
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
CYAN='\033[0;36m'
BOLD='\033[1m'
NC='\033[0m' # No Color

# Paths
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PYTHON_SCRIPTS="$SCRIPT_DIR/../scripts"

# Print functions
print_error() {
    echo -e "${RED}âœ— $1${NC}"
}

# Change to script directory
cd "$SCRIPT_DIR/.." || exit 1

# Check if script exists
if [ ! -f "$PYTHON_SCRIPTS/aggregate_results.py" ]; then
    print_error "aggregate_results.py not found in scripts/"
    exit 1
fi

# Run the Python script with all arguments
python3 "$PYTHON_SCRIPTS/aggregate_results.py" "$@"

