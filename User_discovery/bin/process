#!/bin/bash
#
# User Discovery - Process Interviews
# Convenience wrapper for process_interviews.py
#
# Usage:
#   bin/process                    # Interactive mode
#   bin/process --prompt-path path/to/prompt.txt
#   bin/process --filter "pattern"
#

# Color codes
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
CYAN='\033[0;36m'
BOLD='\033[1m'
NC='\033[0m' # No Color

# Paths
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PYTHON_SCRIPTS="$SCRIPT_DIR/../scripts"

# Print functions
print_header() {
    echo ""
    echo -e "${BLUE}${BOLD}================================================================================${NC}"
    echo -e "${BLUE}${BOLD}$(printf '%*s' $(((${#1}+80)/2)) "$1" | sed 's/^/                                        /' | cut -c1-80)${NC}"
    echo -e "${BLUE}${BOLD}================================================================================${NC}"
    echo ""
}

print_error() {
    echo -e "${RED}âœ— $1${NC}"
}

# Change to script directory
cd "$SCRIPT_DIR/.." || exit 1

# Check if script exists
if [ ! -f "$PYTHON_SCRIPTS/process_interviews.py" ]; then
    print_error "process_interviews.py not found in scripts/"
    exit 1
fi

# Run the Python script with all arguments
python3 "$PYTHON_SCRIPTS/process_interviews.py" "$@"

