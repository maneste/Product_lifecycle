#!/bin/bash
#
# User Discovery - One Command to Rule Them All
# Processes interviews and aggregates results automatically
#

# Color codes
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
CYAN='\033[0;36m'
BOLD='\033[1m'
NC='\033[0m' # No Color

# Paths
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PYTHON_SCRIPTS="$SCRIPT_DIR/../scripts"

# Print functions
print_header() {
    echo ""
    echo -e "${BLUE}${BOLD}================================================================================${NC}"
    echo -e "${BLUE}${BOLD}$(printf '%*s' $(((${#1}+80)/2)) "$1" | sed 's/^/                                        /' | cut -c1-80)${NC}"
    echo -e "${BLUE}${BOLD}================================================================================${NC}"
    echo ""
}

print_success() {
    echo -e "${GREEN}✓ $1${NC}"
}

print_error() {
    echo -e "${RED}✗ $1${NC}"
}

print_info() {
    echo -e "${CYAN}ℹ $1${NC}"
}

# Change to script directory
cd "$SCRIPT_DIR/.." || exit 1

print_header "User Discovery - Processing Everything"

# Step 1: Process interviews
print_info "Step 1: Processing interviews..."
echo ""

if [ ! -f "$PYTHON_SCRIPTS/process_interviews.py" ]; then
    print_error "process_interviews.py not found"
    exit 1
fi

python3 "$PYTHON_SCRIPTS/process_interviews.py" "$@"

if [ $? -ne 0 ]; then
    print_error "Failed to process interviews"
    exit 1
fi

echo ""
print_success "Interviews processed!"
echo ""

# Step 2: Aggregate results
print_info "Step 2: Aggregating results..."
echo ""

if [ ! -f "$PYTHON_SCRIPTS/aggregate_results.py" ]; then
    print_error "aggregate_results.py not found"
    exit 1
fi

python3 "$PYTHON_SCRIPTS/aggregate_results.py"

if [ $? -ne 0 ]; then
    print_error "Failed to aggregate results"
    exit 1
fi

echo ""
print_header "All Done!"
print_success "Check outputs/ folder for summary"
print_info "Check Transcriptions/processed_interviews/ folder for individual results"

